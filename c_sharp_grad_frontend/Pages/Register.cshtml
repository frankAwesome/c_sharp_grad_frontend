@page
@model c_sharp_grad_frontend.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<nav class="navbar navbar-dark bg-dark" style="height:100px;">
    <!-- Navbar content -->
    <img src="~/images/logo2.jpg" style="width:190px; height: 140px;" class="logo" />
</nav>

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 20px;
        width: 20vw;
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: rgba(255, 255, 255, 0.7);
        padding: 2vh;
    }
</style>

<div class="homediv">
    <div class="card">
        <h1 class="text-black-50">Register</h1>
        <form method="POST">
            <div style="margin: 2vh 3vh 2vh">
                <input placeholder="Username" class="form-control" required="required" name="username" />
            </div> 
                
            <div style="margin: 2vh 3vh 2vh">
                <input path="password" type="password" placeholder="Password" class="form-control" required="required" name="password" />
            </div>
            
            <div style="margin: 4vh 0 0; display: flex; flex-direction: column; padding: 1vh; justify-content: space-between;">
                <button type="submit" class="btn btn-outline-primary"> Register </button>
                <p> Already have an account? <a href='/login'> Login. </a></p>
                <p class="mt-5 mb-3 text-muted">BBD © 2020</p>
            </div>
        </form>
    </div>
</div>

