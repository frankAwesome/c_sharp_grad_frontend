@page
@model c_sharp_grad_frontend.Pages.ProfileViewModel
@{
    ViewData["Title"] = "ProfileView";
    var imgSrc = String.Format("data:image/gif;base64,{0}", @Model.image);
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
<script src="~/js/sweetalert2.all.min.js"></script>
<script src="~/js/sweethelper.js"></script>


<!-- Optional: include a polyfill for ES6 Promises for IE11 -->
<script src="https://cdn.jsdelivr.net/npm/promise-polyfill"></script>

<nav class="navbar navbar-dark bg-dark" style="height:100px;">
    <!-- Navbar content -->

    <form class="form-inline">
        <button class="btn btn-danger" asp-page="/donate">Home</button>
        <button class="btn btn-danger" asp-page="/profile">Profile</button>
        <button class="btn btn-danger" asp-page="/donations">Donations</button>
        <button class="btn btn-danger" asp-page="/about">About</button>
        <button class="btn btn-danger" onclick="alert()">Logout</button>
    </form>
</nav>

<style>

    .backgroundDiv {
        width: 100%;
        height: 80vh; 
        background-image: url('/images/sanitizer.jpg');
        background-size: cover;
        justify-content: 'center';
        align-items: 'center';
        position: relative;
    }

    .cards {
        margin: 1vh 0 5vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 80%;
        height: 100%;
 
    }

    .profileCard {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 20px;
        margin: 1vh 0 5vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2vh;
        background-color: rgba(255,255,255,0.2);
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        margin: 5vh 0 4vh;
        }
        
    .left-half {
        flex: 1;
        padding: 1rem;
        flex-direction: column;
        justify-content: flex-start;
        }

    .right-half {
        flex: 1;
        padding: 1rem;
        align-items: center;
        justify-content: flex-end;
        flex-direction: column;
        }
</style>

<div class='backgroundDiv'>
    <div style='display: flex; justify-content: center; position: relative;'>
        <div class="cards">
            <h1>Your profile</h1>
            <div class="profileCard">
                <input type="image" src="@imgSrc" style="width:200px;height:200px" class="rounded-circle" />
                <div class="container">
                    <div class="left-half">
                        <h4>Firstname: @Model.userProfile.Firstname</h4>
                        <h4>Lastname: @Model.userProfile.Lastname</h4>
                        <h4>Username: @Model.userProfile.Username<h4>
                        <h4>Email: @Model.userProfile.Email<h4>
                        <h4>Cell: @Model.userProfile.Cell<h4>
                        <h4>Address line 1: @Model.userProfile.AddressOne<h4>
                        <h4>Address line 2: @Model.userProfile.AddressTwo<h4>
                    </div>
                    <div class="right-half">
                        <h4>Name on card: @Model.userProfile.NameOnCard<h4>
                        <h4>Payment type: @Model.userProfile.PaymentType<h4>
                        <h4>Card Number: @Model.userProfile.CardNumber<h4>
                        <h4>CVV: @Model.userProfile.CVV<h4>
                        <h4>Exp date: @Model.userProfile.ExpirationOnCard<h4>
                    </div>
                </div>
                <a class="btn btn-danger" asp-page="/profileedit">Edit profile</a>
            </div>
        </div>
    </div>
</div>
